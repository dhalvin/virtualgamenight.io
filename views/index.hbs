  
<div id="title" class="jumbotron pb-3">
  <h1>Virtual Game Night</h1>
  <p class="text-muted">{{quip}}</p>
  <p class="text-muted">	&#169; 2020 David Horning</p>
</div>
<div class="container-flex text-light px-4">
  <p class="lead">Welcome to Virtual Game Night! The place where you can play Board Games and Card Games online. Get started by creating a new room, or enter your friend's room code to join theirs.</p>
  <h2>Create a Room</h2>
  <form action="join" method="post">
  <div class="input-group mb-3">
    <div class="input-group-prepend">
    <span class="input-group-text" id="inputGroup-sizing-default">Create New Room</span>
    </div>
    <div class="input-group-append">
    <input class="btn btn-primary" type="submit" name="action" value="Create">
    </div>
  </div>
  </form>
  <h2>Or join an existing one</h2>
  <form action="join" method="post">
    {{#each errors}}
    <div class="alert alert-danger" role="alert">
      {{msg}}
    </div>
    {{/each}}
    <div class="input-group mb-3">
      <div class="input-group-prepend">
      <span class="input-group-text" id="inputGroup-sizing-default">Room Code</span>
      </div>
      <input type="text" name="roomid" class="form-control" required="required" aria-requires="true" aria-label="Room ID Input" aria-describedby="inputGroup-sizing-default">
      <div class="input-group-append">
      <input class="btn btn-primary" type="submit" name="action" value="Join">
      </div>
    </div>
  </form>
</div>
